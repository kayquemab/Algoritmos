algoritmo "Ex13"
var
   salario,novo_salario: real
inicio
      Escreva("Me informe seu salário: ")
      Leia(salario)
      
      novo_salario <- salario * 1.15
      
      Escreva("Seu salário com 15% de aumento é: ",novo_salario:1:3)
fimalgoritmo

